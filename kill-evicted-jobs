apiVersion: batch/v1beta1
kind: CronJob
metadata:
  name: hello
spec:
  schedule: "*/1 * * * *"
  jobTemplate:
    spec:
      template:
        spec:
          containers:
          - name: hello
            image: wernight/kubectl
            imagePullPolicy: IfNotPresent
            command:
            - /bin/sh
            - -c
            - kubectl get po -all-namespaces | awk '/Evicted|Completed/ {print "kubectl delete po -n ",$1,$2}'| sh -x
          restartPolicy: OnFailure
